<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Todolist-v1</title>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%= listTittle %> </h1>
    </div>
<div class="box">

<%  newlistitems.forEach(function(ite){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= ite._id %>" onChange="this.form.submit()">
       <p> <%= ite.name %> </p>
    </div>
    <input type="hidden" name="listName" value=" <%= listTittle %> ">
  </form>

<%  }); %>


  <form class="item" action="/" method="post">
    <input type="text" name="newitem" placeholder="New item" autocomplete="off"/>
    <button type="submit" name="list" value=" <%= listTittle %> ">+</button>
  </form>
</div>



  </body>
</html>
